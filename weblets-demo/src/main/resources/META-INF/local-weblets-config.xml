<?xml version="1.0" encoding="UTF-8" ?>
<weblets-config xmlns="http://weblets.dev.java.net/config">

    <weblet>
        <weblet-name>weblets.webapp</weblet-name>
        <weblet-class>net.java.dev.weblets.sandbox.WebappWeblet</weblet-class>
        <!-- dedicated mime mapping override -->
    	<mime-mapping>
    		<extension>png</extension>
    		<mime-type>image/png</mime-type>
    	</mime-mapping>
    	<init-param>
	      <param-name>resourceRoot</param-name>
	      <param-value>resources</param-value>
	    </init-param>
    </weblet>
	

    <weblet-mapping>
        <weblet-name>weblets.webapp</weblet-name>
        <url-pattern>/webapp/*</url-pattern>
    </weblet-mapping>
    
</weblets-config>    
    