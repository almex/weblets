<assembly>
    <id>bin</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <includes>
                <include>com.github.weblets:weblets-api</include>
                <include>com.github.weblets:weblets-impl</include>
                <include>com.github.weblets:weblets-exampleweblet</include>
                <include>com.github.weblets:weblets-demo</include>
            </includes>
            <binaries>
                <outputDirectory>modules/${artifactId}</outputDirectory>
                <unpack>false</unpack>
            </binaries>
            <sources>
                <outputDirectory>${artifactId}</outputDirectory>
            </sources>
        </moduleSet>
    </moduleSets>
</assembly>